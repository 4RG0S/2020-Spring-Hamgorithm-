import sys

N,M = map(int, input().split())

array = list(map(int, sys.stdin.readline().split()))

start = 0
end = 0

checking = 0 # 값 M에 부분합이 도달했는지 확인하는 용도

count = 0

while not(start == len(array)-1 and end == len(array)-1) : # 투포인터가 모두 배열 끝에 도달하면 탐색 종료

    checking = sum(array[start:end+1]) #반복문을 쓰면 시간초과가 생겨 sum 함수로 대체

    if checking == M : # 목표값과 같아지면 카운트를 늘려나감
        count += 1
        start += 1 # end를 더해나가면 인덱스 밖으로 초과되니 start 지점을 앞으로 늘려나감

    elif checking < M and end < len(array)-1: # 목표값보다 작고 end 지점이 배열 최대값 이내라면 이를 늘려나감
        end += 1
    
    else : # 이외 목표값보다 값이 크면 시작지점을 당겨 그 값을 다시 줄임
        start += 1

checking = 0 # 마지막 지점에서의 값이 목표값과 같을 수도 있기에 한번 더 확인

for i in range(start,end+1) :
    checking += array[i]

if checking == M : 
        count += 1

print(count)